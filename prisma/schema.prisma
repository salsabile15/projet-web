generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  //MARIAB?
  url      = env("DATABASE_URL")
}
model user{
  id Int @id @default(autoincrement())
  email String @unique
  name String
  role ROLE @default(USER)
}
enum ROLE{
  ADMIN 
  AUTHOR
  USER 
}
